<section class="hero py-16 flex-grow">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><en>Are you health-conscious?</en></h6>
            <h1 class="text-6xl font-bold">Go Green!</h1>
            <a href="#menu"><button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button></a>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-veg.png" alt="hero">
        </div>
    </div>
</section>

<section id="menu" class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Vegetables</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% vegetables.forEach(function(vegetable) { %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= vegetable.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= vegetable.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= vegetable.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= vegetable.price %></span>
                    <button data-vegetable="<%= JSON.stringify(vegetable) %>"
                        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>